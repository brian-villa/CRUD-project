<!DOCTYPE html>
<html lang="pt-br">
<%- include('partials/head.ejs') %>
<body>

    <h1><%= title  %> </h1>

    <%- include('partials/navbar.ejs')  %> 

    <% if (typeof message !== 'undefined') { %>
     
        <%= message %> 
    <% } %>
     
    <form action="/edit/<%= user._id %>" method="POST">
        <div>
            <label>Nome</label>
            <input type="text" name="name" placeholder="Digite o seu nome" value="<%= user.name %>">
        </div>
        <div>
            <label>Idade</label>
            <input type="number" name="age" placeholder="Digite a sua idade" value="<%= user.age %>">
        </div>
        <div>
            <label>E-mail</label>
            <input type="email" name="email" placeholder="Digite o seu email" value="<%= user.email %>">
        </div>
        <div>
            <label>Senha</label>
            <input type="text" name="password" placeholder="Digite sua senha">
        </div>
        <button type="submit">Editar</button>
    </form>

    <%- include('partials/foot.ejs') %>
</body>
</html>